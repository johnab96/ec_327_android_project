<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="preferences_text_bold"
        android:title="Bold Text"
        android:summary="Bolds the course name text."
        android:defaultValue="false"/>

    <ListPreference
        android:key="pref_text_size"
        android:title="Text Size"
        android:summary="Increases Text Size"
        android:entries="@array/text_size_entries"
        android:entryValues="@array/text_size_values"
        android:defaultValue="16"/>

</PreferenceScreen>
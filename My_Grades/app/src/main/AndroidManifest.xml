<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ec327_final_project.my_grades">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".choose_gpa_activity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".input_course_information"
            android:label="@string/title_activity_input_course_information"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".gpa_information_display"
            android:label="@string/title_activity_gpa_information_display"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".grade_information_input"
            android:label="@string/title_activity_grade_information_input"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
